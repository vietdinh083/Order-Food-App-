<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10sp"
        android:id="@+id/linerLayoutId"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/orange"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id"
            android:id="@+id/txtOrderId"
            android:gravity="center"
            android:textColor="@color/orange"

            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/linerLayoutId"
        android:id="@+id/linerLayoutTime"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/orange"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/txtTime"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:id="@+id/cardView"
        android:layout_below="@id/linerLayoutTime"
        app:cardCornerRadius="25sp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10sp"
            android:paddingTop="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/comga"
                android:layout_margin="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtNameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of food"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥9999"
                    android:textColor="@color/red"
                    android:layout_below="@id/txtNameFood"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:layout_below="@id/txtPrice"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_below="@id/txtPrice"
                    android:textSize="16dp"
                    android:layout_toRightOf="@id/textView"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"/>


            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total :"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_below="@id/cardView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥9999"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:textSize="20sp"
        android:id="@+id/txtTotal"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_below="@id/cardView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/orange"
        android:text="------------------------"
        android:layout_below="@id/txtTotal"/>


</RelativeLayout>